<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cs4720.virginia.cs.edu.rpims4.GameScreen"
    android:id="@+id/game_screen">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GREEN"
        android:id="@+id/btn_green"
        android:onClick="buttonGreen"
        android:background="#ff3eac44"
        android:layout_marginBottom="39dp"
        android:layout_above="@+id/btn_yellow"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/btn_yellow" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YELLOW"
        android:id="@+id/btn_yellow"
        android:onClick="buttonYellow"
        android:background="#ffe5d312"
        android:layout_above="@+id/btn_orange"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="35dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ORANGE"
        android:id="@+id/btn_orange"
        android:onClick="buttonOrange"
        android:background="#ffffa411"
        android:layout_marginBottom="33dp"
        android:layout_above="@+id/btn_purple"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PINK"
        android:id="@+id/btn_pink"
        android:layout_toEndOf="@+id/btn_orange"
        android:onClick="buttonPink"
        android:background="#ffff5892"
        android:layout_above="@+id/button4"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="35dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PURPLE"
        android:id="@+id/btn_purple"
        android:onClick="buttonPurple"
        android:background="#ff7823cb"
        android:layout_above="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="TIMER"
        android:id="@+id/textView"
        android:textSize="80sp"
        android:layout_marginBottom="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RED"
        android:id="@+id/button2"
        android:onClick="buttonRed"
        android:background="#ff970b00"
        android:layout_above="@+id/btn_green"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="38dp"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WHITE"
        android:id="@+id/button4"
        android:onClick="buttonWhite"
        android:layout_above="@+id/button2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="46dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLUE"
        android:id="@+id/button"
        android:layout_above="@+id/btn_pink"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="buttonBlue"
        android:background="#ff4a93ff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Simon Says!"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:textStyle="bold" />

</RelativeLayout>
